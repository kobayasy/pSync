TARGET = @PACKAGE_TARNAME@@EXEEXT@
OBJS = psync.@OBJEXT@ psync_psp1.@OBJEXT@ popen3.@OBJEXT@ main.@OBJEXT@
MAN1 = @PACKAGE_TARNAME@.1
MAN5 = @PACKAGE_TARNAME@.conf.5

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datarootdir = @datarootdir@
mandir = @mandir@

CC = @CC@
CFLAGS  = @CFLAGS@
#CFLAGS += -Wall
#CFLAGS += -Wno-shift-count-overflow
#CFLAGS += -Wno-string-plus-int
#CFLAGS += -Wno-tautological-constant-out-of-range-compare
DEFS = @DEFS@
LIBS = @LIBS@
INSTALL = @INSTALL@

VPATH = @srcdir@
@SET_MAKE@

.PHONY: all clean distclean install uninstall
.PHONY: install-bin install-man1 install-man5 uninstall-bin uninstall-man1 uninstall-man5

all : $(TARGET)

$(TARGET) : $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

psync.@OBJEXT@ : psync.c psync_utils.h psync.h
psync_psp1.@OBJEXT@ : psync_psp1.c psync_utils.h psync.h psync_psp1.h
popen3.@OBJEXT@ : popen3.c popen3.h
main.@OBJEXT@ : main.c psync_utils.h psync_psp1.h psync.h popen3.h

%.@OBJEXT@ : %.c
	$(CC) $(CFLAGS) $(DEFS) -c $<

clean :
	$(RM) $(TARGET)
	$(RM) $(OBJS)

distclean : clean
	$(RM) config.log config.status config.cache
	$(RM) Makefile

install : install-bin install-man1 install-man5

install-bin : $(TARGET)
	test -d $(bindir) || $(INSTALL) -m755 -d $(bindir)
	$(INSTALL) -m755 -s $^ $(bindir)

install-man1 : $(MAN1)
	test -d $(mandir)/ja/man1 || $(INSTALL) -m755 -d $(mandir)/ja/man1
	$(INSTALL) -m644 $^ $(mandir)/ja/man1

install-man5 : $(MAN5)
	test -d $(mandir)/ja/man5 || $(INSTALL) -m755 -d $(mandir)/ja/man5
	$(INSTALL) -m644 $^ $(mandir)/ja/man5

uninstall : uninstall-bin uninstall-man1 uninstall-man5

uninstall-bin :
	$(RM) $(addprefix $(bindir)/,$(TARGET))

uninstall-man1 :
	$(RM) $(addprefix $(mandir)/ja/man1/,$(MAN1))

uninstall-man5 :
	$(RM) $(addprefix $(mandir)/ja/man5/,$(MAN5))
